
= content_for :page_specific_scripts do
  = javascript_include_tag "items"
  :javascript
    var $path_base = "/vendors/" + #{@vendor._id} + "/";
    var grid_data = #{@items.to_json};
    jQuery(function($) {
      var grid_selector = "#items-table";
      var pager_selector = "#items-pager";

      jQuery(grid_selector).jqGrid({
        data: grid_data
      });
    });
%div.page-content
  %div.page-header
    %h1 Listing Itmes
  .row
    .col-xs-12
      %table#items-table
        #items-pager
