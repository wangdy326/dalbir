                      %div#jEditButton_12.ui-pg-div.ui-inline-edit{:style => "float:left;cursor:pointer;", :'data-original-title' => "Edit Vendor"}
                        = link_to '', vendor, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: "ui-icon ui-icon-trash", :onmouseover => "jQuery(this).addClass('ui-state-hover'); return false", :onmouseout => "jQuery(this).removeClass('ui-state-hover'); return false"
