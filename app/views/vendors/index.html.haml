              %div
            %table#grid-table.ui-jqgrid-btable{:style => "width: 1337px;",  :role => "grid", :'aria-labelledby' => "gbox_grid-table", :cellspacing => 0, :cellpadding => 0, :border => 0, :'aria-multiselectable' => true, :tabindex => 0}                   
              %tbody
              - @vendors.each do |vendor|
                %tr.ui-widget-content.jqgrow.ui-row-ltr{:role => "row", :id => 12, :tabindex => -1}      
                  %td{:'aria-describedby' => 'grid-table_myac', :role => "gridcell"}
