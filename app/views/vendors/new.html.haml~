.page-content
  .page-header
    %h1 New vendor
  .row
    .col-xs-12
      =form_for @vendor, :html => {:class => 'form-horizontal', :role => 'form'} do |f|
        - if false
          #error_explanation
          %h2= "#{pluralize(@vendor.errors.count, "error")} prohibited this vendor from being saved:"
          %ul
          - @vendor.errors.full_messages.each do |msg|
            %li= msg
          .form-group
            %label.col-sm-3.control-label.no-padding-right.form-field-1
              =f.label :vendor_name, 'Vendor'
            .col-sm-9
              #form-field-1.col-xs-10.col-sm-5
                =f.text_field :vendor_name
          .space-4
          .actions
            = f.submit 'Save', name: nil
= link_to 'Back', vendors_path
